

<h1>Your basket</h1>


<button type="button" name="button"> Check out </button>

<div class="">

  <% @current_user.basket.line_items.each do |item| %>
      Product: <%= item.product.title %>
      <br>
      <div class="form">
        <%= form_for item do |f| %>
          <%= f.hidden_field :product_id, :value => item.product.id %>
          Qty<%= f.number_field :quantity, :value => item.quantity, :min =>1%>
          <%= f.submit "update Basket" %>
        <% end  %>
      </div>

  <% end %>


</div>
