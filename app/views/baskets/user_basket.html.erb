

<h1>Your basket!</h1>
<h6>Please review and update the quantity before checking out</h6>
<br>
<div class="btn grey darken-4">
<%= link_to "Check out", basket_check_out_path %>
</div>

<br>

<div class="">

  <% @current_user.basket.line_items.each do |item| %>
      Product: <%= item.product.title %>
      <br>
      <%= cl_image_tag item.product.image %>
      <p>
        Subtotal: AUD <%= item.product.price*item.quantity %>

      </p>
      <br>

        <div class="form">
        <%= form_for item do |f| %>

          <%= f.hidden_field :product_id, :value => item.product.id %>
          Qty<%= f.number_field :quantity, :value => item.quantity, :min =>1%>
          <div class="waves-effect waves-light btn">
            <%= f.submit "update quantity" %>
          </div>
          <br>
          <br>

        <% end  %>

      </div>

  <% end %>


</div>
