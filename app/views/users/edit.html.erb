<h2>
  Edit Profile: <%= @current_user.username %>
</h2>
  <% if @current_user.present? %>

  <%= form_with model:@current_user, local:true, html: {multipart: true} do |f| %>

  <%= f.label :username %>
    <%= f.text_field :username, value: @current_user.username %>
    <br>
    <%= f.label :image %>
    <%= f.cl_image_upload :image %>
    <br>

    <%= f.submit %>
  <% end %>






  <% end %>
