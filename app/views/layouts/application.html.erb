<!DOCTYPE html>
<html>
  <head>
    <title>GA AmazingShop</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>

      <nav>
          <strong>

            The Amazing Shop
            
            |<%= link_to "Home", root_path %>|

            |<%= link_to "Products", products_path %>|


            <% if @current_user.present? %>

              |<%= link_to "basket", basket_path %>|

              |<%= link_to "Logout", login_path, method: 'delete'  %>|


            <% else %>
              |<%= link_to "Login", login_path  %>|
              |<%= link_to "Sign Up", new_user_path  %>|

            <% end %>




          </strong>

      </nav>
    </header>

    <% if @current_user.present? %>
      Welcome, <strong> <%= @current_user.username %> </strong>

    <% else %>
    <% end %>

    <%= yield %>


    <footer>
    <hr>

    &copy Follow us on Facebook

    </footer>

  </body>
</html>
