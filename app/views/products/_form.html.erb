
<%= form_with model:@product, local:true, html: {multipart: true} do |f| %>

<%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br>
  <%= f.label :brand %>
  <%= f.text_field :brand %>
  <br>
  <%= f.label :department %>
  <%= f.text_field :department %>
  <br>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>
  <%= f.label :image %>
  <%= f.cl_image_upload :image %>
  <br>

  <%= f.submit %>
<% end %>
